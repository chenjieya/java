<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.StudentDao">
    
    <insert id="insert">
        insert into student values(#{sid}, #{sname})
    </insert>

    <update id="update">
        update student set sname=#{sname},sid=${sid}
    </update>
    
    <delete id="delete">
        delete from student where sid=#{sid}
    </delete>

    <select id="selectOne" resultType="domain.StudentClass">
        select sid,sname from student where sid = #{sid}
    </select>

    <select id="selectAll" resultType="domain.StudentClass">
        select sid,sname from student;
    </select>
    
</mapper>