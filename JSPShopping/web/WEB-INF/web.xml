<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
        <!--登陆-->
        <servlet>
            <servlet-name>login</servlet-name>
            <servlet-class>controller.LoginController</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>login</servlet-name>
            <url-pattern>/login</url-pattern>
        </servlet-mapping>
    
        <!--注册-->
        <servlet>
            <servlet-name>register</servlet-name>
            <servlet-class>controller.RegistercController</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>register</servlet-name>
            <url-pattern>/register</url-pattern>
        </servlet-mapping>

        <!--类别-->
        <servlet>
            <servlet-name>category</servlet-name>
            <servlet-class>controller.CategoryController</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>category</servlet-name>
            <url-pattern>/category</url-pattern>
        </servlet-mapping>
        <!--商品-->
        <servlet>
            <servlet-name>product</servlet-name>
            <servlet-class>controller.ProductController</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>product</servlet-name>
            <url-pattern>/product</url-pattern>
        </servlet-mapping>
        <!--存储商品-->
        <servlet>
            <servlet-name>saveProduct</servlet-name>
            <servlet-class>controller.saveProductController</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>saveProduct</servlet-name>
            <url-pattern>/saveProduct</url-pattern>
        </servlet-mapping>
</web-app>